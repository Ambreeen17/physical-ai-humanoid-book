<?xml version="1.0"?>
<!--
  3-DOF Planar Robot Arm URDF

  This URDF defines a simple 3 degree-of-freedom planar robot arm for
  forward kinematics visualization and simulation.

  Specifications:
    - 3 revolute joints (joint1, joint2, joint3)
    - Link lengths: 1.0m, 0.8m, 0.5m
    - All joints rotate about z-axis (planar motion in xy-plane)
    - Simple cylindrical geometry for visualization

  Author: Physical AI Lab
  ROS 2 Version: Humble
-->
<robot name="three_dof_arm">

  <!-- ==================== Materials ==================== -->
  <material name="blue">
    <color rgba="0.0 0.3 0.8 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.1 0.1 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.1 0.8 0.2 1.0"/>
  </material>

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- ==================== World Link (Fixed Base) ==================== -->
  <link name="world"/>

  <!-- ==================== Base Link ==================== -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint: World to Base (Fixed) -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ==================== Link 1 ==================== -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="1.0"/>
      </geometry>
      <origin xyz="0.5 0 0" rpy="0 1.5708 0"/>  <!-- Rotate 90Â° about y to align along x -->
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="1.0"/>
      </geometry>
      <origin xyz="0.5 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0.5 0 0" rpy="0 1.5708 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0"
               iyy="0.17" iyz="0.0" izz="0.17"/>
    </inertial>
  </link>

  <!-- Joint 1: Base to Link1 (Revolute) -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>  <!-- Rotation about z-axis -->
    <limit lower="-3.14159" upper="3.14159" effort="100.0" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ==================== Link 2 ==================== -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.8"/>
      </geometry>
      <origin xyz="0.4 0 0" rpy="0 1.5708 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.8"/>
      </geometry>
      <origin xyz="0.4 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0.4 0 0" rpy="0 1.5708 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.10" iyz="0.0" izz="0.10"/>
    </inertial>
  </link>

  <!-- Joint 2: Link1 to Link2 (Revolute) -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100.0" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ==================== Link 3 ==================== -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.5"/>
      </geometry>
      <origin xyz="0.25 0 0" rpy="0 1.5708 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.5"/>
      </geometry>
      <origin xyz="0.25 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.25 0 0" rpy="0 1.5708 0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0"
               iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <!-- Joint 3: Link2 to Link3 (Revolute) -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.8 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100.0" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ==================== End-Effector Link ==================== -->
  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint: Link3 to End-Effector (Fixed) -->
  <joint name="link3_to_end_effector" type="fixed">
    <parent link="link3"/>
    <child link="end_effector"/>
    <origin xyz="0.5 0 0" rpy="0 0 0"/>
  </joint>

</robot>
